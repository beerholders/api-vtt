generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String?
  sheets    Sheet[]
  gameRooms GameRoom[]
}

model GameRoom {
  id              Int     @id @default(autoincrement())
  master          User    @relation(fields: [masterId], references: [id])
  masterId        Int
  numberOfPlayers Int
  sheets          Sheet[]
}

model Sheet {
  id         Int       @id @default(autoincrement())
  player     User      @relation(fields: [playerId], references: [id])
  playerId   Int
  gameRoom   GameRoom? @relation(fields: [gameRoomId], references: [id])
  gameRoomId Int?
}
